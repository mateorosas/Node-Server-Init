<%- include("partials/_header") %>


  <div class="navigation">
    <input type="checkbox" class="navigation__checkbox" id="navi-toggle">
    <label for="navi-toggle" class="navigation__button">
      <span class="navigation__icon">&nbsp;</span>
    </label>
    <div class="navigation__background">&nbsp;</div>
    <nav class="navigation__nav">
      <input type="text" name="search-bar" id="search-bar">
      <label for="search-bar">Serach For</label>
      <button id="searc-btn">Search</button>
      <div class="container mt-5 table-list">
        <div class="row">
          <div class="col-md-7">
            <table class="table table-dark table-bordered table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>Unit</th>
                  <th>Description</th>
                  <th>Complement</th>
                  <th>Portion Name</th>
                  <th>Portion Size</th>
                  <th>Typical Presentation Size</th>
                  <th>Typical Presentation Name</th>
                  <th>Image</th>
                </tr>
              </thead>
              <tbody>
                <% if (products && products.length> 0) { %>
                  <% products.forEach((product, index)=> { %>
                    <tr>
                      <td>
                        <%= index + 1 %>
                      </td>
                      <td>
                        <%= product.nombre %>
                      </td>
                      <td>
                        <%= product.unidad %>
                      </td>
                      <td>
                        <%= product.descripcion %>
                      </td>
                      <td>
                        <%= product.complemento %>
                      </td>
                      <td>
                        <%= product.nombre_porcion %>
                      </td>
                      <td>
                        <%= product.tamano_porcion %>
                      </td>
                      <td>
                        <%= product.tamano_presentacion_tipica %>
                      </td>
                      <td>
                        <%= product.nombre_presentacion_tipica %>
                      </td>
                      <td><img src="<%= product.ruta_imagen %>" alt="Product Image" style="width: 100px;"></td>
                    </tr>
                    <% }) %>
                      <% } else { %>
                        <tr>
                          <td colspan="10">No products found</td>
                        </tr>
                        <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </nav>
  </div>


  <%- include("partials/_footer") %>